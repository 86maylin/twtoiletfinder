<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/roundback"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/nav_header_vertical_spacing"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/roundback_green">

        <TextView
            android:id="@+id/tName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/nav_header_vertical_spacing"
            android:text="名稱"
            android:textColor="@color/common_google_signin_btn_text_dark_default" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="@dimen/nav_header_vertical_spacing"
        android:paddingBottom="@dimen/nav_header_vertical_spacing"
        android:paddingLeft="@dimen/nav_header_vertical_spacing"
        android:paddingRight="@dimen/nav_header_vertical_spacing">

        <TextView
            android:id="@+id/typeMark"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/nav_header_vertical_spacing"
            android:paddingRight="@dimen/nav_header_vertical_spacing"
            android:text="種類" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/level_badge"
                android:gravity="center"
                android:padding="@dimen/nav_header_vertical_spacing"
                android:paddingLeft="@dimen/nav_header_vertical_spacing"
                android:paddingRight="@dimen/nav_header_vertical_spacing"
                android:text="寺廟教堂等宗教活動場所" />

            <TextView
                android:id="@+id/grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/type_badge"
                android:gravity="center"
                android:padding="@dimen/nav_header_vertical_spacing"
                android:paddingLeft="@dimen/nav_header_vertical_spacing"
                android:paddingRight="@dimen/nav_header_vertical_spacing"
                android:text="優等級" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/nav_header_vertical_spacing"
        android:paddingLeft="@dimen/nav_header_vertical_spacing"
        android:paddingRight="@dimen/nav_header_vertical_spacing">

        <TextView
            android:id="@+id/attrMark"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="@dimen/nav_header_vertical_spacing"
            android:text="屬性" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/type2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/nav_header_vertical_spacing"
                android:layout_weight="1"
                android:background="@drawable/level_badge"
                android:gravity="center"
                android:padding="@dimen/nav_header_vertical_spacing"
                android:paddingLeft="@dimen/nav_header_vertical_spacing"
                android:paddingRight="@dimen/nav_header_vertical_spacing"
                android:text="尚無資料"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/Restroom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/nav_header_vertical_spacing"
                android:layout_weight="1"
                android:background="@drawable/restroom_badge"
                android:gravity="center"
                android:padding="@dimen/nav_header_vertical_spacing"
                android:paddingLeft="@dimen/nav_header_vertical_spacing"
                android:paddingRight="@dimen/nav_header_vertical_spacing"
                android:text="男廁"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/women"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/nav_header_vertical_spacing"
                android:layout_weight="1"
                android:background="@drawable/childroom_badge"
                android:gravity="center"
                android:padding="@dimen/nav_header_vertical_spacing"
                android:paddingLeft="@dimen/nav_header_vertical_spacing"
                android:paddingRight="@dimen/nav_header_vertical_spacing"
                android:text="女廁"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/Kindlyroom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/nav_header_vertical_spacing"
                android:layout_weight="1"
                android:background="@drawable/kindlyroom_badge"
                android:gravity="center"
                android:padding="@dimen/nav_header_vertical_spacing"
                android:paddingLeft="@dimen/nav_header_vertical_spacing"
                android:paddingRight="@dimen/nav_header_vertical_spacing"
                android:text="親子廁"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/restroom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/nav_header_vertical_spacing"
                android:layout_weight="1"
                android:background="@drawable/restroom_badge"
                android:gravity="center"
                android:padding="@dimen/nav_header_vertical_spacing"
                android:paddingLeft="@dimen/nav_header_vertical_spacing"
                android:paddingRight="@dimen/nav_header_vertical_spacing"
                android:text="無障礙"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/infoaddress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="@dimen/nav_header_vertical_spacing"
        android:text="地址" />
</LinearLayout>