<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/nav_header_vertical_spacing"
    android:paddingRight="@dimen/nav_header_vertical_spacing"
    android:paddingTop="@dimen/activity_horizontal_margin">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardCornerRadius="4dp"
        card_view:cardUseCompatPadding="true"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/nav_header_vertical_spacing">

            <ImageView
                android:id="@+id/cardicon"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                card_view:srcCompat="@drawable/private_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/hiName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/nav_header_vertical_spacing"
                    android:text="名稱"
                    android:textAlignment="viewStart" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/typeMark"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/nav_header_vertical_spacing"
                        android:paddingRight="@dimen/nav_header_vertical_spacing"
                        android:text="種類" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/hitype"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/level_badge"
                            android:gravity="center"
                            android:padding="@dimen/nav_header_vertical_spacing"
                            android:paddingLeft="@dimen/nav_header_vertical_spacing"
                            android:paddingRight="@dimen/nav_header_vertical_spacing"
                            android:text="寺廟教堂等宗教活動場所" />

                        <TextView
                            android:id="@+id/higrade"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/type_badge"
                            android:gravity="center"
                            android:padding="@dimen/nav_header_vertical_spacing"
                            android:paddingLeft="@dimen/nav_header_vertical_spacing"
                            android:paddingRight="@dimen/nav_header_vertical_spacing"
                            android:text="優等級" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/attrMark"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:padding="@dimen/nav_header_vertical_spacing"
                        android:text="屬性" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/hiempty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/nav_header_vertical_spacing"
                            android:layout_weight="1"
                            android:background="@drawable/level_badge"
                            android:gravity="center"
                            android:padding="@dimen/nav_header_vertical_spacing"
                            android:paddingLeft="@dimen/nav_header_vertical_spacing"
                            android:paddingRight="@dimen/nav_header_vertical_spacing"
                            android:text="尚無資料"
                            android:textSize="14sp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/himale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/nav_header_vertical_spacing"
                            android:layout_weight="1"
                            android:background="@drawable/restroom_badge"
                            android:gravity="center"
                            android:padding="@dimen/nav_header_vertical_spacing"
                            android:paddingLeft="@dimen/nav_header_vertical_spacing"
                            android:paddingRight="@dimen/nav_header_vertical_spacing"
                            android:text="男廁"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/hifemale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/nav_header_vertical_spacing"
                            android:layout_weight="1"
                            android:background="@drawable/childroom_badge"
                            android:gravity="center"
                            android:padding="@dimen/nav_header_vertical_spacing"
                            android:paddingLeft="@dimen/nav_header_vertical_spacing"
                            android:paddingRight="@dimen/nav_header_vertical_spacing"
                            android:text="女廁"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/hichildroom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/nav_header_vertical_spacing"
                            android:layout_weight="1"
                            android:background="@drawable/kindlyroom_badge"
                            android:gravity="center"
                            android:padding="@dimen/nav_header_vertical_spacing"
                            android:paddingLeft="@dimen/nav_header_vertical_spacing"
                            android:paddingRight="@dimen/nav_header_vertical_spacing"
                            android:text="親子廁"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/hirestroom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/nav_header_vertical_spacing"
                            android:layout_weight="1"
                            android:background="@drawable/restroom_badge"
                            android:gravity="center"
                            android:padding="@dimen/nav_header_vertical_spacing"
                            android:paddingLeft="@dimen/nav_header_vertical_spacing"
                            android:paddingRight="@dimen/nav_header_vertical_spacing"
                            android:text="無障礙"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/hiaddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/nav_header_vertical_spacing"
                    android:text="地址"
                    android:textAlignment="viewStart" />

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>